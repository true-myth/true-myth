// Folder-specific settings
//
// For a full list of overridable settings, and general information on folder-specific settings,
// see the documentation: https://zed.dev/docs/configuring-zed#settings-files
{
  "languages": {
    "TypeScript": {
      "wrap_guides": [
        80,
        100
      ],
      "formatter": {
        "external": {
          "command": "pnpm",
          "arguments": [
            "run",
            "--silent",
            "format",
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      }
    },
    "JSON": {
      "formatter": {
        "external": {
          "command": "pnpm",
          "arguments": [
            "run",
            "--silent",
            "format",
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      }
    }
  }
}
