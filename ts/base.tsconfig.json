{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es2022",
    "module": "Node16",
    "lib": [
      "es2022",
      // For `setTimeout`.
      "DOM"
    ],
    "strict": true,
    "noUncheckedIndexedAccess": true,
    // This breaks with TS v6.0 and current `@types/node` (v24.7). Turn it back
    // on when that’s fixed. We don’t currently depend on that behavior in any
    // way, but we prefer to enable it.
    // "exactOptionalPropertyTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "Node16"
  },
  // as a base, don't include anything: specify that in the other files
  "include": []
}
