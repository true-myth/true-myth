{
  "name": "true-myth",
  "description": "A library for safe functional programming in JavaScript, with first-class support for TypeScript and Flow",
  "homepage": "https://true-myth.js.org",
  "contributors": [
    {
      "name": "Chris Krycho",
      "email": "hello@chriskrycho.com",
      "url": "http://www.chriskrycho.com"
    },
    {
      "name": "Ben Makuh"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/true-myth/true-myth"
  },
  "bugs": {
    "url": "https://github.com/true-myth/true-myth/issues"
  },
  "version": "4.1.1",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./maybe": "./dist/maybe.js",
    "./result": "./dist/result.js",
    "./unit": "./dist/unit.js"
  },
  "types": "index.d.ts",
  "keywords": [
    "ember-addon",
    "typescript",
    "functional programming",
    "maybe",
    "result"
  ],
  "scripts": {
    "ts:es": "yarn tsc -p ts/es.tsconfig.json",
    "ts:typedefs": "yarn tsc -p ts/types.tsconfig.json && mv defs/* . && rmdir defs",
    "ts:all": "yarn ts:es && yarn ts:typedefs",
    "build": "yarn clean && yarn ts:all",
    "clean": "rimraf ./*.d.ts ./*.d.ts.map ./dist ./-private",
    "doc": "./scripts/build-docs",
    "lint": "yarn eslint src/*.ts test/*.ts",
    "prepublishOnly": "yarn test && yarn build",
    "postpublish": "yarn clean",
    "preversion": "./scripts/build-docs && git add docs",
    "test": "jest",
    "tdd": "jest --watch"
  },
  "files": [
    "*.d.ts",
    "*.d.ts.map",
    "dist",
    "src"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@typescript-eslint/parser": "^4.10.0",
    "eslint": "^7.15.0",
    "expect-type": "^0.13.0",
    "jest": "^27.3.1",
    "prettier": "^2.2.1",
    "prettier-eslint": "^13.0.0",
    "release-it": "^14.11.8",
    "release-it-lerna-changelog": "^4.0.1",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.2",
    "ts-jest": "^27.0.7",
    "typedoc": "^0.22.10",
    "typescript": "^4.0.5"
  },
  "engines": {
    "node": "12.* || >= 14.*"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^true-myth/(.*)$": "<rootDir>/src/$1",
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/\\.node_modules/",
      "src/index.ts",
      "\\.+\\.d\\.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "statements": 100,
        "lines": 100
      }
    },
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            151001
          ]
        },
        "tsconfig": "test/tsconfig.json"
      }
    }
  },
  "prettier": {
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "es6": true
    },
    "rules": {
      "no-undef": "off",
      "no-unused-vars": "off",
      "no-redeclare": "off",
      "no-irregular-whitespace": "off"
    }
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      }
    }
  },
  "volta": {
    "node": "12.22.7",
    "yarn": "1.22.17",
    "npm": "7.1.2"
  }
}
